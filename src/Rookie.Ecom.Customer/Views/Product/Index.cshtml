@using Rookie.Ecom.Contracts
@using Rookie.Ecom.Contracts.Dtos
@model PagedResponseModel<ProductDto>
@{
}
<section class="bg-gray-7">
    <div class="breadcrumbs-custom box-transform-wrap context-dark">
        <div class="container">
            <h3 class="breadcrumbs-custom-title">Product</h3>
            <div class="breadcrumbs-custom-decor"></div>
        </div>
        <div class="box-transform" style="background-image: url(images/bg-1.jpg);"></div>
    </div>
</section>
<section class="section section-lg bg-default">
    <div class="container">
        <div class="tabs-custom row row-50 justify-content-center flex-lg-row-reverse text-center text-md-left">
            <div class="col-lg-4 col-xl-3">
                 @await Component.InvokeAsync("CategoryList")
            </div>
            <div class="col-lg-8 col-xl-9">
                <div class="row">
                    @{
                        foreach (var product in Model.Items)
                        {
                            <div class="col-sm-6 col-lg-4 col-xl-4 my-3">
                            @await Component.InvokeAsync("ProductCard", product)
                            </div>
                            
                        }
                    }

                </div>
                @await Component.InvokeAsync("Pagination", Model)
            </div>

        </div>
    </div>
</section>