@using Rookie.Ecom.Contracts.Dtos
@model IEnumerable<OrderDto>
<section class="bg-gray-7">
    <div class="breadcrumbs-custom box-transform-wrap context-dark">
        <div class="container">
            <h3 class="breadcrumbs-custom-title">Order</h3>
            <div class="breadcrumbs-custom-decor"></div>
        </div>
        <div class="box-transform" style="background-image: url(/images/bg-1.jpg);"></div>
    </div>
</section>
<section class="section section-lg bg-default text-md-left">
    <div class="container">
        <p class="aside-contacts-title">Your orders</p>
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total</th>
                    <th scope="col">Detail</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 1;
                }
                @foreach (var order in Model)
                {
                    <tr>
                        <th scope="row" class="align-middle">@i</th>
                        <td class="align-middle">@order.CreatedDate.ToString()</td>
                        <td class="align-middle">@order.OrderStatus</td>
                        <td class="align-middle">@order.Total</td>
                        <td class="align-middle"><a class="btn btn-primary btn-sm" asp-controller="Order" asp-action="Detail" asp-route-id=@order.Id>view</a></td>
                    </tr>
                    i++;
                }


            </tbody>
        </table>
    </div>
</section>
